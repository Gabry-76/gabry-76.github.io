---
const { title, sub, url, image, plays } = Astro.props
---

<div class={`group h-20 block px-2 py-[0.4rem] bg-p-accent shadow-neobrutalist-low border-2 border-black truncate`}>
    <div class="flex">
        <div class="max-w-[4rem] flex flex-shrink-0 h-full">
            <img src={image} class="max-w-full h-full aspect-square flex-grow-0" draggable="false" alt="Spotify Stats" />
        </div>
        <div class={`flex flex-col w-auto mx-4 truncate ${!sub && 'justify-center'}`}>
            <a class="text-xl font-bold group-hover:underline truncate" href={url} title={title}>{title}</a>
            {sub && <p class="text-md">{sub}</p>}
        </div>

        <div class="self-center ml-auto whitespace-nowrap mx-1 p-2 bg-white rounded-md shadow-neobrutalist-low">{plays} Plays</div>
    </div>
</div>
