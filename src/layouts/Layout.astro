---
const { title } = Astro.props
import '../styles/input.css'
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" href="https://cdn.inertiah.uno/gabry-icon.png" />
        <link rel="shortcut icon" href="https://cdn.inertiah.uno/gabry-icon.png" />

        <meta property="og:title" content="NotGabry" />
        <meta property="og:description" content="Minimalism ❤" />
        <meta property="theme-color" content="#A9A7F1" />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300&family=Poppins&family=Young+Serif&display=swap" rel="stylesheet" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.4.2/css/all.css" />
    </head>

    <body class="bg-p-bg max-w-xl mx-auto font-young-seri">
        <slot />
    </body>
</html>
